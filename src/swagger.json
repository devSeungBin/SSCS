{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Plans Wizard's REST API",
    "description": "Plans Wizard's API 명세서"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Plans Wizard's API 명세서 주소"
    }
  ],
  "tags": [
    {
      "name": "UserRouter",
      "description": "사용자와 관련된 기능을 처리하는 라우터"
    },
    {
      "name": "GroupRouter",
      "description": "그룹과 관련된 기능을 처리하는 라우터"
    }
  ],
  "paths": {
    "/group/create": {
      "post": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 생성 API",
        "description": "사용자가 그룹을 생성할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "생성할 그룹 정보",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "group_name"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "정상적으로 그룹이 생성됨"
          },
          "400": {
            "description": "잘못된 요청 양식"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/group/profile:id": {
      "get": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 정보 조회 API",
        "description": "그룹의 정보를 조회할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상적으로 그룹 정보가 조회됨"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        }
      }
    },
    "/group/users:id": {
      "get": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 참여자 정보 조회 API",
        "description": "그룹 참여자 정보를 조회할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상적으로 그룹 참여자 정보가 조회됨"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        }
      }
    },
    "/group/code:id": {
      "get": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 초대코드 생성 API",
        "description": "그룹 초대코드를 생성할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "정상적으로 그룹 초대코드가 생성됨"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        }
      }
    },
    "/group/join": {
      "post": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 참여 API",
        "description": "사용자가 그룹에 참여할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "그룹 초대코드 정보",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "invitation_code": {
                  "type": "string",
                  "example": "invitation_code"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "정상적으로 그룹에 참여됨"
          },
          "400": {
            "description": "잘못된 요청 양식"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "invitation_code": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/group/modification:id": {
      "post": {
        "tags": [
          "groupRouter"
        ],
        "summary": "그룹 정보 수정 API",
        "description": "그룹의 정보를 수정할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "body",
            "in": "body",
            "description": "그룹 수정 정보",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "group_name"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "정상적으로 그룹에 참여됨"
          },
          "400": {
            "description": "잘못된 요청 양식"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/preference": {
      "get": {
        "tags": [
          "preferenceRouter"
        ],
        "summary": "선호도 조회 API",
        "description": "사용자가 자신의 선호도를 조회할 때 사용하는 엔드포인트",
        "responses": {
          "200": {
            "description": "정상적으로 선호도 조회됨"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        }
      },
      "post": {
        "tags": [
          "preferenceRouter"
        ],
        "summary": "선호도 수정 API",
        "description": "사용자가 자신의 선호도를 수정할 때 사용하는 엔드포인트",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "수정할 선호도 정보",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "day_preference": {
                  "type": "object",
                  "properties": {
                    "Mon": {
                      "type": "number",
                      "example": 3
                    },
                    "Tue": {
                      "type": "number",
                      "example": 3
                    },
                    "Wed": {
                      "type": "number",
                      "example": 3
                    },
                    "Thu": {
                      "type": "number",
                      "example": 3
                    },
                    "Fri": {
                      "type": "number",
                      "example": 3
                    },
                    "Sat": {
                      "type": "number",
                      "example": 3
                    },
                    "Sun": {
                      "type": "number",
                      "example": 3
                    }
                  }
                },
                "time_preference": {
                  "type": "object",
                  "properties": {
                    "am": {
                      "type": "number",
                      "example": 3
                    },
                    "pm": {
                      "type": "number",
                      "example": 3
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "정상적으로 선호도 수정됨"
          },
          "400": {
            "description": "잘못된 요청 양식"
          },
          "500": {
            "description": "서버 내부 오류"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "day_preference": {
                    "example": "any"
                  },
                  "time_preference": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "UserRouter"
        ],
        "summary": "사용자 정보 조회 API (인증 필수)",
        "description": "사용자의 정보를 반환하는 엔드포인트",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getUsersRes200"
                }
              }
            },
            "description": "OK"
          },
          "303": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_303"
                }
              }
            },
            "description": "See Other"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_401"
                }
              }
            },
            "description": "Unauthorized"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_404"
                }
              }
            },
            "description": "Not Found"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_500"
                }
              }
            },
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "UserRouter"
        ],
        "summary": "사용자 로컬 회원가입 API (인증 불필요)",
        "description": "사용자가 로컬 회원가입 시 사용하는 엔드포인트",
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/postUsersRes201"
                }
              }
            },
            "description": "Created"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_400"
                }
              }
            },
            "description": "Bad Request"
          },
          "409": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_409"
                }
              }
            },
            "description": "Conflict"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_500"
                }
              }
            },
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "in": "body",
          "description": "회원가입할 사용자 정보",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/postUsers"
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "get": {
        "tags": [
          "UserRouter"
        ],
        "summary": "구글 로그인 API (인증 불필요)",
        "description": "사용자가 구글 계정으로 로그인할 때 구글 로그인 URL을 반환하는 엔드포인트",
        "responses": {
          "409": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_409"
                }
              }
            },
            "description": "Conflict"
          }
        }
      },
      "post": {
        "tags": [
          "UserRouter"
        ],
        "summary": "로컬 로그인 API (인증 불필요)",
        "description": "사용자가 로컬 계정으로 로그인할 때 사용하는 엔드포인트, 여기서 로컬 로그인 전략이 적용된다.",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/postUsersLoginRes200"
                }
              }
            },
            "description": "OK"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_400"
                }
              }
            },
            "description": "Bad Request"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_404"
                }
              }
            },
            "description": "Not Found"
          },
          "409": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_409"
                }
              }
            },
            "description": "Conflict"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_500"
                }
              }
            },
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "in": "body",
          "description": "로그인할 사용자 정보",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/postUsersLogin"
              }
            }
          }
        }
      }
    },
    "/users/login/callback": {
      "get": {
        "tags": [
          "UserRouter"
        ],
        "summary": "구글 로그인 리다이렉트 API (인증 불필요)",
        "description": "클라이언트가 구글 인증 서버에서 인증 코드를 받은 후 리다이렉트되는 엔드포인트, 여기서 구글 로그인 전략이 적용된다.",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getUsersLoginCallbackRes200"
                }
              }
            },
            "description": "OK"
          },
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getUsersLoginCallbackRes201"
                }
              }
            },
            "description": "Created"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_500"
                }
              }
            },
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "tags": [
          "UserRouter"
        ],
        "summary": "로그아웃 API (인증 필수)",
        "description": "로그아웃 시 사용하는 엔드포인트",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/postUsersLogoutRes200"
                }
              }
            },
            "description": "OK"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_401"
                }
              }
            },
            "description": "Unauthorized"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response_500"
                }
              }
            },
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "postUsers": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "홍승빈"
          },
          "email": {
            "type": "string",
            "example": "libeyang01@naver.com"
          },
          "password": {
            "type": "string",
            "example": "12345678"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "postUsersLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "libeyang01@naver.com"
          },
          "password": {
            "type": "string",
            "example": "12345678"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "response_303": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "example": "리다이렉트 URL"
          }
        },
        "required": [
          "location"
        ]
      },
      "response_400": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string",
            "example": "400"
          },
          "message": {
            "type": "string",
            "example": "해당 요청이 올바르지 않습니다."
          },
          "comment": {
            "type": "string",
            "example": "(자세한 오류 내용)"
          }
        },
        "required": [
          "statusCode",
          "message",
          "comment"
        ]
      },
      "response_401": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string",
            "example": "401"
          },
          "message": {
            "type": "string",
            "example": "로그인이 필요한 기능입니다."
          }
        },
        "required": [
          "statusCode",
          "message"
        ]
      },
      "response_403": {
        "type": "object",
