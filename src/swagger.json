        },
        "required": [
          "statusCode",
          "message",
          "comment"
        ]
      },
      "getUsersRes200": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "string",
            "example": "200"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "사용자 id"
              },
              "name": {
                "type": "string",
                "example": "사용자 이름"
              },
              "email": {
                "type": "string",
