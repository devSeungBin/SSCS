              },
              "image": {
                "type": "string",
                "example": "사용자 프로필 이미지"
              },
              "provider": {
                "type": "string",
                "example": "로그인 종류"
              },
              "new": {
                "type": "string",
                "example": "신규 사용자 여부"
              },
              "created_at": {
                "type": "string",
                "example": "사용자 가입일"
